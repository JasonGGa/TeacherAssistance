<Window x:Class="EpieHorarios.CambiarContra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpieHorarios"
        mc:Ignorable="d"
        Title="Cambiar Contraseña" Height="225" Width="250">
    <Grid>
        <Label Content="Ingrese contraseña antigua:" HorizontalAlignment="Left" Margin="25,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Ingresa nueva contraseña:" HorizontalAlignment="Left" Margin="27,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.52,-0.453"/>
        <PasswordBox x:Name="ContraAnte" HorizontalAlignment="Left" Margin="30,50,0,0" VerticalAlignment="Top" Width="180"/>
        <PasswordBox x:Name="ContraNueva" HorizontalAlignment="Left" Margin="30,110,0,0" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="Cambiar" Content="Cambiar" HorizontalAlignment="Left" Margin="85,150,0,0" VerticalAlignment="Top" Width="75" Click="Cambiar_Click"/>

    </Grid>
</Window>
